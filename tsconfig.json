{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "outDir": "./dist",
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "exclude": [
        "./**/*.test.ts"
    ],
    "files": [
        "index.d.ts"
    ],
    "include": [
        "./**/*.ts"
    ]
}